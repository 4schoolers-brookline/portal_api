{% extends 'manager/base.jinja' %}
{% load static %}

{% block style %}
{% endblock style %}

{% block content %}
<div class="content-body">
	<div class="container-fluid">
		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Hi, welcome back!</h4>
					<p class="mb-0"></p>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Make request</a></li>
				</ol>
			</div>
		</div>
		<!-- row -->
		<div class = "row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Make request</h4>
					</div>
					<div class="card-body">
						<form action="" method = "POST" name = "edit_account" class = "needs-validation" novalidate> {% csrf_token %}
							<div class="form-row">
                                <label>Describe your request</label>
                                <textarea class="form-control" name = "req" rows="10" id="req" value = ""></textarea>
							</div>

							<button class="btn btn-primary" type="submitBtn">Send request</button>
							{% if wrong %}<h4>{{wrong}}</h4>{% endif %}
						</form>

					</div>
				</div>
            </div>
		</div>
	</div>
</div>
{% endblock content %}

{% block scripts %}
    <script src="{% static 'manager/js/lightgallery-all.min.js'%}" ></script>


	<script src="{% static 'manager/js/password_validation.js'%}" ></script>


{% endblock scripts %}
