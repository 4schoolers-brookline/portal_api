{% extends 'manager/base.jinja' %}
{% load static %}

{% block style %}
    <link href="{% static 'manager/css/lightgallery.min.css' %}" rel="stylesheet">
{% endblock style %}

{% block content %}
<div class="content-body">
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Hi, welcome back!</h4>
					<span>Post Details</span>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Lessons</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Lesson Details</a></li>
				</ol>
			</div>
		</div>
		<!-- row -->
		<div class="row">
			<div class="col-xl-4">
				<div class="row">
					<div class="col-xl-12">
						<div class="card">
							<div class="card-body">
								<div class="profile-interest">
									<h5 class="text-primary d-inline">Students Attending</h5>
									<div class="row mt-4 sp4" id="">
										{% for s in students_registered %}
											{% if s.image %}
												<a href="{% url 'manager_student' s.id %}" class="mb-1 col-lg-4 col-xl-4 col-sm-4 col-6">
													<img src="{{s.image.url}}" alt="{{s.user.get_full_name}}" class="img-fluid">
												</a>
											{% else %}
												<a href="{% url 'manager_student' s.id %}"  class="mb-1 col-lg-4 col-xl-4 col-sm-4 col-6">
													<img src="{% static 'manager/img/man.png'%}" alt="{{s.user.get_full_name}}" class="img-fluid">
												</a>
											{% endif %}


										{% endfor %}

									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>


			<div class="col-xl-8">
				<div class="card">
					<div class="card-body">
						<div class="post-details">
							<h3 class="mb-2 text-black">{{lesson.subject}}: {{lesson.name}}</h3>
								<div class="ml-auto">
									<a href="{% url 'manager_lesson_edit' lesson.pk %}" class="btn btn-primary btn-xs sharp mr-1"><i class="fa fa-pencil"></i></a>
									<a href="{% url 'manager_lesson_delete' lesson.pk %}" class="btn btn-danger btn-xs sharp"><i class="fa fa-trash"></i></a>
								</div>
							<ul class="mb-4 post-meta d-flex flex-wrap">
								<li class="post-author mr-3">By <a href = "{% url 'manager_employee' lesson.teacher.pk %}">{{lesson.teacher.user.get_full_name}}</a></li>
								<li class="post-date mr-3"><i class="fa fa-calender"></i>{{lesson.start}} - {{lesson.end}}</li>

							</ul>

							<p>	{{lesson.description}} </p>





						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



{% endblock content %}

{% block scripts %}
    <script src="{% static 'manager/js/lightgallery-all.min.js'%}" ></script>
{% endblock scripts %}
