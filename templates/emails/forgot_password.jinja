{% extends 'student/base_not_loged.jinja' %}
{% load static %}

{% block bodyclass %}vh-100{% endblock %}
{% block content %}
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
									<div class="text-center mb-3">
										<img src="{% static 'employee/img/logo-min.png' %}" alt="">
									</div>
                                    <h4 class="text-center mb-4">Forgot password</h4>
                                    <form action="" method = "POST"> {% csrf_token %}
                                        <div class="form-group">
                                            <label class="mb-1"><strong>Email or login</strong></label>
                                            <input required type="text" class="form-control" name = "login">
                                        </div>
                                        
                                        
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block">Send password recovery instructions</button>
                                        </div>
                                        {% if invalid %}
                                            <div class="new-account mt-3">
                                                <p> Account not found </p>
                                            </div>
                                        {% endif %}

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}

{% block scripts%}

{% endblock %}
