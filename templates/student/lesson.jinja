{% extends 'student/base.jinja' %}
{% load static %}

{% block style %}
    <link href="{% static 'css/lightgallery.min.css' %}" rel="stylesheet">
{% endblock style %}

{% block content %}
<div class="content-body">
	<div class="container-fluid">

		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Hi, welcome back!</h4>
					<span>Post Details</span>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Lessons</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Lesson Details</a></li>
				</ol>
			</div>
		</div>
		<!-- row -->
		<div class="row">
			<div class="col-xl-4">
				<div class="row">
					<div class="col-xl-12">
						<div class="card">
							<div class="card-body">
								<div class="profile-interest">
									<h5 class="text-primary d-inline">Students Attending</h5>
									<div class="row mt-4 sp4" id="lightgallery">
										{% for s in students_registered %}
											<a href="{{s.image.url}}" data-exthumbimage="{{s.image.url}}" data-src="{{s.image.url}}" class="mb-1 col-lg-4 col-xl-4 col-sm-4 col-6">
												<img src="{{s.image.url}}" alt="{{s.user.get_full_name}}" class="img-fluid">
											</a>
											
										{% endfor %}
										
									</div>
								</div>
							</div>
						</div>
					</div>

					<div class="col-xl-12">
						<div class="card">
							<div class="card-body">
								<div class="profile-interest">
									<h5 class="text-primary d-inline">Shared Files</h5>
									<div class="row mt-4 sp4" id="lightgallery">
										<a href="javascript:void()" class="btn btn-primary light btn-xs mb-1">Classwork</a>
										<a href="javascript:void()" class="btn btn-primary light btn-xs mb-1">Homework</a>
									</div>
								</div>
							</div>
						</div>
					</div>


				</div>
			</div>
			<div class="col-xl-8">
				<div class="card">
					<div class="card-body">
						<div class="post-details">
							<h3 class="mb-2 text-black">{{lesson.subject}}: {{lesson.name}}</h3>
							<ul class="mb-4 post-meta d-flex flex-wrap">
								<li class="post-author mr-3">By <a class = "btn-info" href = "{% url 'student_employee' lesson.teacher.pk %}">{{lesson.teacher.user.get_full_name}} </a></li>
								<li class="post-date mr-3"><i class="fa fa-calender"></i>{{lesson.start}} - {{lesson.end}}</li>
								
							</ul>
							
							<p>	{{lesson.description}} </p>

							{% if submission %}
								<div class="comment-respond" id="respond">
									<h4 class="comment-reply-title text-primary mb-3" id="reply-title">Homework submitted.</h4>
									
								</div>
							{% else %}
								<div class="comment-respond" id="respond">
									<h4 class="comment-reply-title text-primary mb-3" id="reply-title">Submit Homework </h4>
									<form class="comment-form" id="commentform" method="post">
										<div class="row"> 
											<div class="col-lg-12">
												<div class="form-group">
													<label for="comment" class="text-black font-w600">Description</label>
													<textarea rows="8" class="form-control" name="comment" placeholder="Description of the homework..." id="comment"></textarea>
												</div>
											</div>
	
											
											<div class="col-lg-12">
												<div class = "input-group mb-3">
													<div class="input-group-prepend">
														<button class="btn btn-primary btn-sm" type="button">Submit</button>
													</div>
													<div class="custom-file">
														<input type="file" class="custom-file-input">
														<label class="custom-file-label">Choose file</label>
													</div>
												</div>
											</div>
										</div>
									</form>
								</div>
							

							{% endif %}



						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock content %}

{% block scripts %}
    <script src="{% static 'js/lightgallery-all.min.js'%}" ></script>
{% endblock scripts %}
