{% extends 'student/base.jinja' %}
{% load static %}

{% block style %}
{% endblock style %}

{% block content %}
<div class="content-body">
	<div class="container-fluid">
		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Hi, welcome back!</h4>
					<p class="mb-0">4Schoolers welcomes you.</p>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Profile</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Change Password</a></li>
				</ol>
			</div>
		</div>
		<!-- row -->
		<div class = "row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Change Password</h4>
					</div>
					<div class="card-body">
						<form action="" method = "POST" name = "edit_account" class = "needs-validation" novalidate> {% csrf_token %}
							<div class="form-row">
								<div class="form-group col-md-4">
									<label>Old password</label>
									<input type="password" name = "old_password"  class="form-control">
								</div>							
								<div class="form-group col-md-4">
									<label>New password</label>
									<input type="password" name = "password"  id = "pass" class="form-control">
								</div>
								<div class="form-group col-md-4">
									<label>Repeat password</label>
									<input type="password" name = "repeat_password" id = "repeatPass"  class="form-control">
								</div>

							</div>

							<button class="btn btn-primary" type="submitBtn">Change</button>
							{% if wrong %}<h4>{{wrong}}</h4>{% endif %}
						</form>
						
					</div>
				</div>
            </div>
		</div>
	</div>		
</div>
{% endblock content %}

{% block scripts %}
    <script src="{% static 'student/js/lightgallery-all.min.js'%}" ></script>


	<script src="{% static 'student/js/password_validation.js'%}" ></script>


{% endblock scripts %}
