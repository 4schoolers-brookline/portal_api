{% extends 'student/base.jinja' %}
{% load static %}

{% block style %}
    <link href="{% static 'css/lightgallery.min.css' %}" rel="stylesheet">

	<link href="{% static 'css/lightgallery.min.css' %}" rel="stylesheet">
	<link href="{% static 'css/bootstrap-material-datetimepicker.css' %}" rel="stylesheet">

{% endblock style %}

{% block content %}
<div class="content-body">
	<div class="container-fluid">
		<div class="row page-titles mx-0">
			<div class="col-sm-6 p-md-0">
				<div class="welcome-text">
					<h4>Hi, welcome back!</h4>
					<p class="mb-0">4Schoolers welcomes you.</p>
				</div>
			</div>
			<div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="javascript:void(0)">Lessons</a></li>
					<li class="breadcrumb-item active"><a href="javascript:void(0)">Add Lesson</a></li>
				</ol>
			</div>
		</div>
		<!-- row -->
		<div class = "row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Schedule new Lesson</h4>
					</div>
					<div class="card-body">
						<form action="" method = "POST" name = "edit_account"> {% csrf_token %}
							<div class="form-row">
								<div class="form-group col-md-4">
									<label>Lesson name</label>
									<input type="text" name = "name" value = "Homework help" class="form-control">
								</div>
								<div class="form-group col-md-4">
									<label>Subject</label>
										<select class="form-control default-select" id="inputState" name = "subject">
											<option selected="">Choose...</option>
											<option>Mathematics</option>
											<option>Computer Science</option>
											<option>English</option>
											<option>Chemistry</option>
											<option>Physics</option>
											<option>History</option>
											<option>Academic Advising</option>
											<option>Competitive Math</option>
											<option>Projects</option>
											<option>Essay Writing</option>
										</select>
								</div>
								<div class="form-group col-md-4">
									<label>Teacher</label>
										<input class = "form-control default-select" list="teachers" name="teacher" id="teacher">
										<datalist id="teachers">
											{% for teacher in employees %}
												<option value="{{teacher.user.get_full_name}}">{{teacher.user.get_full_name}}</option>
											{% endfor %}
										</datalist>
								</div>
							</div>

							<div class="form-row">
								<div class="form-group col-md-12">
									<label >Description</label>
									<textarea rows="8" class="form-control" name="descr" placeholder="Description of the homework..." id="comment"></textarea>
								</div>
							</div>

							
							
							<div class="row form-material">
								<div class="col-xl-3 col-xxl-6 col-md-6 mb-3">
									<label>Lesson Start time</label>
									<input type="text" class="form-control" name = "start" placeholder="Set Start Date and Time" id="min-date">
								</div>
								<div class="col-xl-3 col-xxl-6 col-md-6">
									<label>Lesson End time</label>
									<input type="text" class="form-control" name = "end" placeholder="Set End Date and Time" id="min-date">
								</div>
							</div>

							<button class="btn btn-primary" type="submit">Schedule</button>
						</form>
						
					</div>
				</div>
            </div>
		</div>
	</div>		
</div>
{% endblock content %}

{% block scripts %}
    <script src="{% static 'js/lightgallery-all.min.js'%}" ></script>

	<script src="{% static 'js/picker.js'%}" ></script>
	<script src="{% static 'js/picker.time.js'%}" ></script>
	<script src="{% static 'js/picker.date.js'%}" ></script>

	<script src="{% static 'js/bootstrap-material-datetimepicker.js'%}" ></script>


{% endblock scripts %}
