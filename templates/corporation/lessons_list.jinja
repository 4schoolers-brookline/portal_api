{% extends 'corporation/base.jinja' %}
{% load static %}

{% block style %}
    <link href="{% static 'corporation/css/dataTables.min.css' %}" rel="stylesheet">
{% endblock style %}

{% block content %}
        ***********************************-->
        <div class="content-body">
			<div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-6 p-md-0">
                        <div class="welcome-text">
                            <h4>Hi, welcome back!</h4>
                            <span>Lessons Table</span>
                        </div>
                    </div>
                    <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Lessons</a></li>
                            <li class="breadcrumb-item active"><a href="javascript:void(0)">Table</a></li>
                        </ol>
                    </div>
                </div>
                <!-- row -->


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Lessons</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="display" style="min-width: 845px">
                                        <thead>
                                            <tr>
                                                <th>Start</th>
                                                <th>Lesson</th>
                                                <th>Teacher</th>
                                                <th>Students</th>
                                                <th>Subject</th>
                                                
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for lesson in lessons %}
                                                <tr>
                                                    <td>{{lesson.start}}</td>
                                                    <td><a class = "badge badge-info light" href = "{% url 'corporation_lesson' lesson.pk %}">{{lesson.name}}</a></td>
                                                    <td>{{lesson.teacher}}</td>
                                                    <td>
                                                        {% for student in lesson.students.all %}
                                                            <a class = "badge badge-success" href = "{% url 'corporation_student' student.user.pk %}">{{student.user.get_full_name}}</a>
                                                        {% endfor %}
                                                    </td>
                                                    <td>{{lesson.subject}}</td>
                                                    
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
				</div>
            </div>
        </div>
{% endblock content %}

{% block scripts %}
    <script src="{% static 'corporation/js/moment.min.js'%}" ></script>

    <script src="{% static 'corporation/js/jquery.dataTables.min.js'%}" ></script>
    <script src="{% static 'corporation/js/datatables.init.js'%}" ></script>
{% endblock scripts %}
